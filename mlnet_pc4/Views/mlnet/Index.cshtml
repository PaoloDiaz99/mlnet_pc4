@{
    ViewData["Title"] = "View";
}

<h1>EVALUAR MODELO </h1>

<form asp-controller="mlnet" asp-action="mlnet" method="post">
        <label for="textInput">Texto a evaluar:</label>
        <input type="text" id="textInput" name="textInput" class="form-control" required>
    <br />
    <button type="submit" class="btn btn-primary">Evaluar</button>
</form>
<br />
<div>
    <p>
        @if(@Model != null)
        {
            @if (@Model.PredictedLabel == 1)
            {
                <span>El sentimiento es POSITIVO.</span>
            }
            else if(Model.PredictLabel == 0)
            {
                <span>El sentimiento es NEGATIVO.</span>
            }
        }
        </p>
    </div>
